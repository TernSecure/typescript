{
  "name": "@tern-secure/ui",
  "version": "0.0.0",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm build:js && pnpm build:types",
    "build:js": "pnpm clean && rspack build --config rspack.config.js --env production",
    "build:types": "tsc -p tsconfig.add.json",
    "dev": "rspack serve --config rspack.config.js",
    "dev:two": "pnpm clean && concurrently \"pnpm dev:build\" \" pnpm dev:types\" \"pnpm dev:watch\"",
    "dev:build": "rspack build --config rspack.config.mjs --env development --watch",
    "dev:watch": "rspack serve --config rspack.config.mjs --env development",
    "dev:types": "tsc -p tsconfig.add.json --watch",
    "lint": "eslint src/",
    "watch": "rspack build --config rspack.config.mjs --env production --watch"
  },
  "browserslist": "last 2 years",
  "dependencies": {
    "@tern-secure/shared": "workspace:*",
    "@tern-secure/types": "workspace:*",
    "core-js": "3.41.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "regenerator-runtime": "0.13.11"
  },
  "devDependencies": {
    "@rspack/cli": "^1.3.10",
    "@rspack/core": "^1.3.10",
    "@rspack/plugin-react-refresh": "^1.0.1",
    "@tanstack/react-form": "^1.11.1",
    "@tailwindcss/cli": "^4.1.6",
    "@tailwindcss/postcss": "^4.1.6",
    "@types/webpack-env": "^1.18.8",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9.15.0",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "rimraf": "^5.0.0",
    "tailwindcss": "^4.1.6",
    "webpack-merge": "^5.10.0"
  },
  "peerDependencies": {
    "react": "^18 || ^19.0.0-0",
    "react-dom": "^18 || ^19.0.0-0"
  },
  "engines": {
    "node": ">=20"
  },
  "browserslistLegacy": "Chrome > 73, Firefox > 66, Safari > 12, iOS > 12, Edge > 18, Opera > 58"
}