{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es2019"
  },
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts", 
    "**/*.test.tsx",
    "tsup.config.ts",
  ],
  "include": ["src"]
}