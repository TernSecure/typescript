{
  "name": "@tern-secure/shared",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TernSecure/typescript.git",
    "directory": "packages/shared"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsup && tsc -p tsconfig.add.json",  
    "dev": "tsup --watch",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "author": "Pacifique Kamugisha",
  "license": "ISC",
  "description": "Shared types and utilities for TernSecure projects",
  "files": [
    "dist",
    "derivedAuthState",
    "eventBus",
    "loadScript",
    "loadTernUIScript",
    "retry"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./*": {
      "import": {
        "types": "./dist/*.d.mts",
        "default": "./dist/*.mjs"
      },
      "require": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/react/index.d.mts",
        "default": "./dist/react/index.mjs"
      },
      "require": {
        "types": "./dist/react/index.d.ts",
        "default": "./dist/react/index.js"
      }
    }
  },
  "main": "./dist/index.js",
  "devDependencies": {
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@tern-secure/types": "workspace:*",
    "tslib": "2.4.1"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },

  "engines": {
    "node": ">=20"
  }
}
